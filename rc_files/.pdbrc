# Enable tab completion in pdb
import rlcompleter
import pdb
pdb.Pdb.complete = rlcompleter.Completer(locals()).complete

# Customize the pdb prompt
class CustomPdb(pdb.Pdb):
    def __init__(self, *args, **kwargs):
        super().__init__(*args, **kwargs)
        self.prompt = "[pdb+] "

# Use the customized pdb class
import sys

def set_custom_trace():
    debugger = CustomPdb()
    debugger.set_trace(sys._getframe().f_back)

# Override the default pdb.set_trace to use improved pdb
import pdb
pdb.set_trace = set_custom_trace

